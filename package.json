{
  "name": "babel-plugin-transform-react-remove-display-name",
  "description": "Make React component `displayName` property available only in none production environment during the build",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "felixmosh",
  "license": "MIT",
  "keywords": [
    "babel",
    "babel-plugin",
    "react",
    "minification",
    "displayName"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/felixmosh/babel-plugin-transform-react-remove-display-name.git"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "test": "jest",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "release": "release-it --only-version",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/types": "^7.20.5",
    "@types/jest": "^29.2.4",
    "auto-changelog": "^2.4.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "before:init": [
        "yarn test",
        "yarn build"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "github": {
      "release": true
    }
  }
}
